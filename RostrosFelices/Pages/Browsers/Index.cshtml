@page
@model RostrosFelices.Pages.Browsers.IndexModel
@{
}
<h1>Servicios Ralizados</h1>
<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    tbody tr:nth-child(even) {
        background-color: #f2f2f2;
    }
</style>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre del Servicio</th>
            <th>Fecha</th>
            <th>Cliente</th>
            <th>Empleado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var servicio in Model.Servicios)
        {
            <tr>
                <td>@servicio.Id</td>
                <td>@servicio.NombreDelServicio</td>
                <td>@servicio.Fecha</td>
                <td>@servicio.Cliente.NombreCliente</td>
                <td>@servicio.Empleado.NombreEmpleado</td>
            </tr>
        }
    </tbody>
</table>
