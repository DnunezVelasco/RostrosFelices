@model RostrosFelices.Pages.Empleados.IndexModel
@{
}
<p>
    <a asp-page="Create" class="btn btn-success">Creat New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model=>model.Empleados[0].NombreEmpleado)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.Empleados[0].Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.Empleados[0].Documento)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.Empleados[0].Cargo)
            </th>
            

            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Empleados)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem=>item.NombreEmpleado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem=>item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem=>item.Documento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem=>item.Cargo)
                </td>
               

                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
                <td>
                    <span></span>
                </td>
            </tr>
        }
    </tbody>
</table>